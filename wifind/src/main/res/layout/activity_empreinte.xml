<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.ig2i.wifind.activities.EmpreinteActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nombre d&apos;AP : "
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/0"
        android:id="@+id/nbAP"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Création d&apos;empreinte"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se positionner"
        android:id="@+id/button3"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:onClick="onClickPosition" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accéder au scanner"
        android:id="@+id/button4"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:onClick="onClickScanner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentEnd="true"
        android:onClick="onClickEnregistrer" />


    <fr.ig2i.wifind.views.DrawableImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/tony_pizza"
        android:scaleType="center"
        android:background="#ffff0800"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API CALL"
        android:id="@+id/button6"
        android:layout_above="@+id/button5"
        android:layout_alignParentEnd="true"
        android:onClick="onClickAPICall" />

</RelativeLayout>
